<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".EditProductActivity">

    <TextView
        android:id="@+id/activity_edit_product_productid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="productID" />

    <EditText
        android:id="@+id/activity_edit_product_productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="product name" />

    <EditText
        android:id="@+id/activity_edit_product_unitprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="unit price"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/activity_edit_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />

    <Button
        android:id="@+id/activity_edit_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete" />
</LinearLayout>