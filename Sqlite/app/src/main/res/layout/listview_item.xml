<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/listview_item_expenseId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="expenseID" />

    <TextView
        android:id="@+id/listview_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@android:string/fingerprint_icon_content_description" />

    <TextView
        android:id="@+id/listview_item_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Amount" />

    <TextView
        android:id="@+id/listview_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Date" />
</LinearLayout>